<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- 引入配置文件 -->
	<context:property-placeholder location="classpath:system.properties,classpath:jdbc.properties,classpath:httpClient.properties" />

	<!-- 打开Spring的Annotation支持 -->
	<context:annotation-config />

	<!-- 扫描注入  -->
	<context:component-scan base-package="com.cheng.weixin.service.wxtools" />

	<import resource="classpath:spring/spring-dubbo-provider.xml"/>
	<!--<import resource="classpath:spring/spring-mybatis.xml"/>-->
	<import resource="classpath:spring/spring-httpclient.xml"/>
	<import resource="classpath:spring/spring-quartz.xml"/>

</beans>